<?xml version="1.0" encoding="utf-8"?>
<log4net>
    <!-- 将日志输出到 WPF 日志控件 -->
    <appender name="Log4netBox" type="HelloWorld.Controls.Log4net.Appender.Log4netBoxAppender">
        <mapping>
            <level value="FATAL" />
            <foreColor value="DarkRed" />
        </mapping>
        <mapping>
            <level value="ERROR" />
            <foreColor value="Red" />
        </mapping>
        <mapping>
            <level value="WARN" />
            <foreColor value="Blue" />
        </mapping>
        <mapping>
            <level value="INFO" />
            <foreColor value="Green" />
        </mapping>
        <mapping>
            <level value="DEBUG" />
            <foreColor value="Gray" />
        </mapping>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{HH:mm:ss}][%level] %message" />
        </layout>
    </appender>
    
    <!-- 将日志输出到控制台 -->
    <appender name="Console" type="log4net.Appender.ManagedColoredConsoleAppender">
        <mapping>
            <level value="FATAL" />
            <foreColor value="DarkRed" />
        </mapping>
        <mapping>
            <level value="ERROR" />
            <foreColor value="Red" />
        </mapping>
        <mapping>
            <level value="WARN" />
            <foreColor value="Yellow" />
        </mapping>
        <mapping>
            <level value="INFO" />
            <foreColor value="Green" />
        </mapping>
        <mapping>
            <level value="DEBUG" />
            <foreColor value="Gray" />
        </mapping>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{HH:mm:ss}][%level] %message%newline" />
        </layout>
    </appender>
    
    <!-- 将日志以回滚文件的形式写到文件中 -->
    <!-- 按日期切分日志文件，并将日期作为日志文件的名字 -->
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
        <!-- 不加utf-8编码格式，中文字符将显示成乱码 -->
        <param name="Encoding" value="utf-8" />
        <!-- 追加模式 -->
        <appendToFile value="true" />
        <!-- 可以为:Once|Size|Date|Composite -->
        <rollingStyle value="Date" />
        <!-- 日志最大个数 -->
        <maxSizeRollBackups value="30" />
        <!-- 可用的单位:KB|MB|GB -->
        <maximumFileSize value="2MB" />
        <!-- 置为true,当前最新日志文件名永远为file节中的名字 -->
        <staticLogFileName value="false" />
        <file value="Logs/" />
        <!-- 日期的格式，每小时换一个文件记录，如不设置则永远只记录一天的日志，需设置 -->
        <datePattern value="yyyy-MM-dd-HH'.log'"/>
        <!-- 多线程时采用最小锁定 -->
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <!-- 布局（向用户显示最后经过格式化的输出信息） -->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{HH:mm:ss}][%thread/%level][%logger]: %message%newline"/>
        </layout>
    </appender>
    
    <root>
        <!-- 控制级别，由低到高：ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
        <!-- 比如定义级别为INFO，则INFO级别向下的级别，比如DEBUG日志将不会被记录 -->
        <!-- 如果没有定义LEVEL的值，则缺省为DEBUG -->
        <level value="ALL" />
        
        <appender-ref ref="Log4netBox"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
    </root>
</log4net>
